# Contributor: Michał Polański <michal@polanski.me>
# Maintainer: Michał Polański <michal@polanski.me>
pkgname=gping
pkgver=1.19.0
pkgrel=0
pkgdesc="Ping, but with a graph"
url="https://github.com/orf/gping"
license="MIT"
arch="all"
makedepends="cargo cargo-auditable"
source="https://github.com/orf/gping/archive/gping-v$pkgver/gping-$pkgver.tar.gz"
builddir="$srcdir/gping-gping-v$pkgver"
options="net" # fetch dependencies

prepare() {
	default_prepare

	cargo fetch --target="$CTARGET" --locked
}

build() {
	cargo auditable build --frozen --release
}

check() {
	# absent ipv6 network access causes timeout
	cargo test --frozen -- --skip test_integration_ip6
}

package() {
	install -Dm755 target/release/$pkgname -t "$pkgdir"/usr/bin/
}

sha512sums="
87d55cdd2ab70bb47ef8ced505f8dbf11d0c2bc5d64baa855c41e16bb0c36e452022a76c15185980ce3773f6fa589825c6a65a0ce20b5d66dfac9b472cc3dd7a  gping-1.19.0.tar.gz
"
