# Maintainer: Willow Barraco <contact@willowbarraco.fr>
pkgname=wl-mirror
pkgver=0.18.3
pkgrel=0
pkgdesc="A simple Wayland output mirror client"
url="https://github.com/Ferdi265/wl-mirror"
license="GPL-3.0-or-later"
arch="all"
makedepends="
	cmake
	mesa-dev
	samurai
	scdoc
	wayland-dev
	wayland-protocols
	"
subpackages="$pkgname-doc"
source="https://github.com/Ferdi265/wl-mirror/releases/download/v$pkgver/wl-mirror-$pkgver.tar.gz"
options="!check" # no test suite

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DINSTALL_DOCUMENTATION=ON \
		-DINSTALL_EXAMPLE_SCRIPTS=OFF \
		-DWITH_GBM=ON \
		-DWLR_PROTOCOL_DIR="$builddir/proto/wlr-protocols"
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
c3f69310807b73443a7f65012740c5c8b1b2bf955f0fce91bceff24b85b81d244386e853e3acb9e91692f2d0538be65aed748b04db69edc48ffca6103b1a636b  wl-mirror-0.18.3.tar.gz
"
