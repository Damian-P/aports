maintainer="Bart Ribbers <bribbers@disroot.org>"
pkgname=nitrokey-app2
pkgver=2.3.5
pkgrel=0
pkgdesc="Nitrokey management application"
url="https://github.com/Nitrokey/nitrokey-app2"
# blocked by py3-spsdk -> py3-pynitrokey
# armhf blocked by qt6-qtdeclarative -> py3-pyside6
arch="aarch64 x86_64"
license="Apache-2.0"
depends="
	py3-pynitrokey
	py3-pyside6
	py3-qt-material
	py3-qt5
	py3-usb-monitor
	"
makedepends="
	poetry
	py3-flit-core
	py3-gpep517
	py3-installer
	"
subpackages="$pkgname-pyc"
source="$pkgname-$pkgver.tar.gz::https://github.com/Nitrokey/nitrokey-app2/archive/refs/tags/v$pkgver.tar.gz"
options="!check" # No tests

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
bcd8978d68e18fc8b17b4ec68a18db2a188abad354871500590a49fa91ce99ae3dc99da929d26c2e90832cc45404e8ae497cf60fe09324e9b0d53277aa9ad8f2  nitrokey-app2-2.3.5.tar.gz
"
