# Contributor: omni <omni+alpine@hack.org>
# Maintainer:
pkgname=rstcheck-core
pkgver=1.2.1
pkgrel=0
pkgdesc="Core library behind rstcheck"
url="https://rstcheck-core.readthedocs.io/en/latest/"
arch="noarch"
license="MIT"
depends="python3
	py3-docutils
	py3-importlib-metadata
	py3-pydantic
	py3-typing-extensions
	"
makedepends="py3-gpep517 py3-setuptools py3-wheel"
checkdepends="bash py3-pytest"
subpackages="$pkgname-pyc"
source="$pkgname-$pkgver.tar.gz::https://github.com/rstcheck/rstcheck-core/archive/v$pkgver.tar.gz"

build() {
	gpep517 build-wheel --wheel-dir .dist --output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest
}

package() {
	python3 -m installer -d "$pkgdir" .dist/*.whl
}

sha512sums="
e731ca4d9214b716a8a769296c31677b39ba0d36823ccfd80e77c191225c63bfe3620c27147208e4fd5883244aab6c0d6a351226d6e5a80cec564bbaaa90eb50  rstcheck-core-1.2.1.tar.gz
"
