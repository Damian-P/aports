# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kcrash
pkgver=6.16.0
pkgrel=0
pkgdesc="Support for application crash analysis and bug report from apps"
# armhf blocked by qt6-qtdeclarative -> kcoreaddons
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.1-or-later"
depends_dev="
	kcoreaddons-dev
	kwindowsystem-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	kde-qdoc-common
	qt6-qttools-dev
	samurai
	"
checkdepends="xwayland-run"
subpackages="$pkgname-dev $pkgname-doc"
_repo_url="https://invent.kde.org/frameworks/kcrash.git"
source="https://download.kde.org/stable/frameworks/${pkgver%.*}/kcrash-$pkgver.tar.xz"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	cmake --build build --target prepare_docs
	cmake --build build --target generate_docs
	cmake --build build --target generate_qch
}

check() {
	# kcrashtest is broken
	wlheadless-run -- ctest --test-dir build -E "kcrashtest"
}

package() {
	DESTDIR="$pkgdir" cmake --install build

	DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

sha512sums="
cfe5a78cfd34bf9d09059b1f865ba188a322d3b1b744515bbf9c6bf76ea19dcc8ef68fefe3dcbf99aa4b21610b71b93a550e40a2be6c4275693c4e30b62a470e  kcrash-6.16.0.tar.xz
"
