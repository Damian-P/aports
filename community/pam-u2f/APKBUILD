# Contributor: Rasmus Thomsen <oss@cogitri.dev>
# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=pam-u2f
pkgver=1.3.1
pkgrel=0
pkgdesc="Pluggable Authentication Module (PAM) for U2F"
url="https://developers.yubico.com/pam-u2f/"
arch="all"
license="BSD-2-Clause"
makedepends="linux-pam-dev openssl-dev>3 libfido2-dev"
options="!check" # need yubikey plugged in on live machine
subpackages="$pkgname-doc"
source="https://developers.yubico.com/pam-u2f/Releases/pam_u2f-$pkgver.tar.gz"
builddir="$srcdir/pam_u2f-$pkgver"

# secfixes:
#   1.1.1-r0:
#     - CVE-2021-31924

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		--with-pam-dir=/usr/lib/security
	make
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
1a09d176587610b3730fd211e47ea93fa7c42ccc988358b55a130f2c5b6bd4ef12837f047ca82503415204a78d722622bd0092c3f6e160bb6c72d0282adb0df2  pam_u2f-1.3.1.tar.gz
"
