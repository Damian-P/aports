maintainer="Achill Gilgenast <achill@achill.org>"
pkgname=dodo
pkgver=0_git20250806
_commit=bcb0db840f6eb0223f99e9ddefe147d84f50dc98
pkgrel=1
pkgdesc="Graphical, hackable email client based on notmuch"
url="https://github.com/akissinger/dodo"
arch="noarch !riscv64 !s390x !ppc64le !armhf !armv7 !x86 !loongarch64" # blocked by py3-pyqt6-webengine
license="GPL-3.0-or-later"
depends="
	hicolor-icon-theme
	notmuch
	py3-bleach
	py3-pyqt6-webengine
	py3-qt6
	w3m
	"
makedepends="
	py3-gpep517
	py3-setuptools
	py3-wheel
	"
checkdepends="py3-pytest"
subpackages="$pkgname-pyc"
source="$pkgname-$_commit.tar.gz::https://github.com/akissinger/dodo/archive/$_commit.tar.gz"
options="!check" # no tests
builddir="$srcdir/$pkgname-$_commit"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
5b3e54721e5c497929bebfc6167d08346a43f025d3cd125884a9bca6e25a914ca71cd40667022fc07a2732de15df3d71a0a7c798d386391cc65ccd814fdaa61a  dodo-bcb0db840f6eb0223f99e9ddefe147d84f50dc98.tar.gz
"
