maintainer="fossdd <fossdd@pwned.life>"
pkgname=dodo
pkgver=0_git20250805
_commit=a6e7394d8329df1268e60cfc61d15b3c2038bf68
pkgrel=0
pkgdesc="Graphical, hackable email client based on notmuch"
url="https://github.com/akissinger/dodo"
arch="noarch !riscv64 !s390x !ppc64le !armhf !armv7 !x86 !loongarch64" # blocked by py3-pyqt6-webengine
license="GPL-3.0-or-later"
depends="
	hicolor-icon-theme
	notmuch
	py3-bleach
	py3-pyqt6-webengine
	py3-qt6
	w3m
	"
makedepends="
	py3-gpep517
	py3-setuptools
	py3-wheel
	"
checkdepends="py3-pytest"
subpackages="$pkgname-pyc"
source="$pkgname-$_commit.tar.gz::https://github.com/akissinger/dodo/archive/$_commit.tar.gz"
options="!check" # no tests
builddir="$srcdir/$pkgname-$_commit"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
f5a6c9acd026a0ede7a59ae24b17a3b2c4624251bd2472407a93ace768943798288eb13d124be7a6189b823cfb71bae9b8b54e5619db665a3318fc39e20503dc  dodo-a6e7394d8329df1268e60cfc61d15b3c2038bf68.tar.gz
"
